# EspoCRM Dokploy Environment Configuration
# Copy this file to .env and configure your settings

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=database
DB_PORT=3306
DB_NAME=espocrm
DB_USER=espocrm
DB_PASSWORD=your_secure_database_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Your domain name (without https://)
DOMAIN=crm.yourdomain.com
ESPOCRM_SITE_URL=https://crm.yourdomain.com

# Admin credentials (change these!)
ESPOCRM_ADMIN_USERNAME=admin
ESPOCRM_ADMIN_PASSWORD=your_secure_admin_password_here

# Localization
ESPOCRM_LANGUAGE=en_US
ESPOCRM_TIMEZONE=UTC

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
ESPOCRM_SMTP_SERVER=smtp.gmail.com
ESPOCRM_SMTP_PORT=587
ESPOCRM_SMTP_AUTH=true
ESPOCRM_SMTP_SECURITY=TLS
ESPOCRM_SMTP_USERNAME=your_email@gmail.com
ESPOCRM_SMTP_PASSWORD=your_app_specific_password
ESPOCRM_OUTBOUND_EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# ===========================================
# PERFORMANCE TUNING
# ===========================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=180
PHP_MAX_INPUT_TIME=180
PHP_UPLOAD_MAX_FILESIZE=50M
PHP_POST_MAX_SIZE=50M

# ===========================================
# PHPMYADMIN CONFIGURATION (Optional)
# ===========================================
PMA_DOMAIN=pma.yourdomain.com
# Set basic auth in Dokploy UI for security

# ===========================================
# DOKPLOY SPECIFIC
# ===========================================
# Build metadata
BUILD_DATE=2024-01-21
VCS_REF=main

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_MAX_MEMORY=128mb

# ===========================================
# SECURITY
# ===========================================
# Generate secure keys with: openssl rand -hex 32
ESPOCRM_SECURITY_KEY=
ESPOCRM_CRYPTO_KEY=

# ===========================================
# MONITORING
# ===========================================
# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===========================================
# DEPLOYMENT
# ===========================================
# GitHub webhook secret (for auto-deploy)
GITHUB_WEBHOOK_SECRET=

# Docker registry (if using private registry)
DOCKER_REGISTRY_URL=
DOCKER_REGISTRY_USERNAME=
DOCKER_REGISTRY_PASSWORD=