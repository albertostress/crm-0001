# ===========================================
DB_HOST=database
DB_PORT=3306
DB_NAME=espocrm
DB_USER=espocrm
DB_PASSWORD=espocrm_secure_password_123
MYSQL_ROOT_PASSWORD=mysql_root_password_456

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
DOMAIN=crm.kiandaedge.online
ESPOCRM_SITE_URL=https://crm.kiandaedge.online
ESPOCRM_ADMIN_USERNAME=admin
ESPOCRM_ADMIN_PASSWORD=admin_password_789

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
ESPOCRM_SMTP_SERVER=smtp.gmail.com
ESPOCRM_SMTP_PORT=587
ESPOCRM_SMTP_AUTH=true
ESPOCRM_SMTP_SECURITY=TLS
ESPOCRM_SMTP_USERNAME=your_email@gmail.com
ESPOCRM_SMTP_PASSWORD=your_app_password
