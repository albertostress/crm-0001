# Create custom JavaScript file
COPY <<'EOF' /var/www/html/client/custom/lib/custom-footer.js
/**
 * EVERTEC CRM - Watermark Removal and Branding Replacement
 * Version: 3.0 - Ultra Aggressive
 */
(function() {
    'use strict';
    
    const EVERTEC_BRANDING = '¬© 2025 EVERTEC CRM ‚Äî Todos os direitos reservados';
    
    function replaceEspoCrmBranding() {
        try {
            // Expanded list of selectors
            const selectors = [
                '.credit.small',
                '.credit',
                'p.credit',
                'p.credit.small',
                '#footer .credit',
                'footer .credit',
                '.layout__sidebar .credit',
                '.sidebar .credit',
                '.navbar-footer .credit',
                '.main-footer .credit',
                'div[data-name="footer"]',
                '.footer-text',
                '.copyright',
                '*[class*="credit"]',
                '*[class*="footer"]'
            ];
            
            selectors.forEach(selector => {
                const elements = document.querySelectorAll(selector);
                elements.forEach(element => {
                    const text = element.textContent || '';
                    const html = element.innerHTML || '';
                    
                    if (text.includes('EspoCRM') || 
                        text.includes('espocrm') ||
                        html.includes('espocrm.com') ||
                        html.includes('EspoCRM')) {
                        
                        element.innerHTML = EVERTEC_BRANDING;
                        element.style.textAlign = 'center';
                        element.style.color = '#999';
                        element.style.fontSize = '13px';
                        element.style.display = 'block';
                        element.classList.add('evertec-footer');
                        
                        // Remove any child links
                        const links = element.querySelectorAll('a');
                        links.forEach(link => link.remove());
                    }
                });
            });
            
            // Force replace all text nodes containing EspoCRM
            const walker = document.createTreeWalker(
                document.body,
                NodeFilter.SHOW_TEXT,
                null,
                false
            );
            
            let node;
            while (node = walker.nextNode()) {
                if (node.nodeValue && node.nodeValue.includes('EspoCRM')) {
                    node.nodeValue = node.nodeValue.replace(/EspoCRM/g, 'EVERTEC CRM');
                }
            }
            
            // Remove all links to espocrm.com
            document.querySelectorAll('a[href*="espocrm.com"]').forEach(link => {
                link.remove();
            });
            
            // Check for dynamically loaded content
            const containers = document.querySelectorAll('.container-footer, .page-footer, #footer');
            containers.forEach(container => {
                if (container.innerHTML.includes('EspoCRM')) {
                    container.innerHTML = container.innerHTML.replace(/EspoCRM/g, 'EVERTEC CRM');
                    container.innerHTML = container.innerHTML.replace(/espocrm\.com/g, 'evertec.com');
                }
            });
            
        } catch (error) {
            console.error('[EVERTEC Branding] Error:', error);
        }
    }
    
    // Run immediately
    replaceEspoCrmBranding();
    
    // Run on DOM ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', replaceEspoCrmBranding);
    }
    
    // Run on page load
    window.addEventListener('load', replaceEspoCrmBranding);
    
    // Run periodically (every 500ms for aggressive replacement)
    setInterval(replaceEspoCrmBranding, 500);
    
    // Observer for ANY DOM changes
    if (typeof MutationObserver !== 'undefined') {
        const observer = new MutationObserver(function() {
            replaceEspoCrmBranding();
        });
        
        // Start observing when body is available
        const startObserving = function() {
            if (document.body) {
                observer.observe(document.body, {
                    childList: true,
                    subtree: true,
                    attributes: true,
                    characterData: true
                });
            } else {
                setTimeout(startObserving, 100);
            }
        };
        startObserving();
    }
    
    // Hook into AJAX responses to replace content
    const originalOpen = XMLHttpRequest.prototype.open;
    XMLHttpRequest.prototype.open = function() {
        this.addEventListener('load', function() {
            setTimeout(replaceEspoCrmBranding, 100);
        });
        originalOpen.apply(this, arguments);
    };
    
    // Hook into fetch responses
    const originalFetch = window.fetch;
    window.fetch = function() {
        return originalFetch.apply(this, arguments).then(function(response) {
            setTimeout(replaceEspoCrmBranding, 100);
            return response;
        });
    };
})();

// Secondary fallback that runs every second
setInterval(function() {
    document.querySelectorAll('*').forEach(function(element) {
        if (element.innerHTML && element.innerHTML.includes('EspoCRM')) {
            element.innerHTML = element.innerHTML.replace(/EspoCRM/g, 'EVERTEC CRM');
        }
    });
}, 1000);
EOF

# Create metadata configuration
COPY <<'EOF' /var/www/html/custom/Espo/Custom/Resources/metadata/app/client.json
{
    "cssList": [
        "__APPEND__",
        "client/custom/res/css/custom.css"
    ],
    "scriptList": [
        "__APPEND__",
        "client/custom/lib/custom-footer.js"
    ]
}
EOF

# Create necessary directories with proper permissions
RUN mkdir -p /var/www/html/data \
    && mkdir -p /var/www/html/custom \
    && mkdir -p /var/www/html/client/custom \
    && mkdir -p /var/www/html/upload \
    && chown -R www-data:www-data /var/www/html/data \
    && chown -R www-data:www-data /var/www/html/custom \
    && chown -R www-data:www-data /var/www/html/client/custom \
    && chown -R www-data:www-data /var/www/html/upload \
    && chmod -R 775 /var/www/html/data \
    && chmod -R 775 /var/www/html/custom \
    && chmod -R 775 /var/www/html/upload

# AGGRESSIVE: Replace EspoCRM in core files during build
RUN echo "üî® Removing EspoCRM watermark from core files..." \
    && find /var/www/html -type f \( -name "*.php" -o -name "*.js" -o -name "*.tpl" \) \
        -not -path "*/vendor/*" \
        -not -path "*/node_modules/*" \
        -not -path "*/tests/*" \
        -exec sed -i 's/EspoCRM/EVERTEC CRM/g' {} \; \
        -exec sed -i 's/espocrm\.com/evertec.com/g' {} \; 2>/dev/null || true \
    && echo "‚úÖ Core files patched"

# Configure Apache virtual host
COPY <<EOF /etc/apache2/sites-available/000-default.conf
<VirtualHost *:80>
    ServerName crm.kiandaedge.online
    DocumentRoot /var/www/html
    
    <Directory /var/www/html>
        Options -Indexes +FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    
    # Health check endpoint
    Alias /api/v1/health /var/www/html/public/api/v1/health.php
    
    ErrorLog \${APACHE_LOG_DIR}/error.log
    CustomLog \${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
EOF

# Set Apache ServerName globally to suppress warning
RUN echo "ServerName crm.kiandaedge.online" >> /etc/apache2/apache2.conf

# Create health check script
COPY <<'EOF' /usr/local/bin/healthcheck.php
<?php
// Simple health check for EspoCRM
try {
    // Check if config exists
    if (!file_exists('/var/www/html/data/config.php')) {
        http_response_code(503);
        echo json_encode(['status' => 'error', 'message' => 'Configuration not found']);
        exit(1);
    }
    
    // Try to include config
    $config = include('/var/www/html/data/config.php');
    
    // Check database connection if config exists
    if (isset($config['database'])) {
        $dsn = "mysql:host={$config['database']['host']};port={$config['database']['port']};dbname={$config['database']['dbname']}";
        $pdo = new PDO($dsn, $config['database']['user'], $config['database']['password']);
        $pdo->query('SELECT 1');
    }
    
    http_response_code(200);
    echo json_encode(['status' => 'healthy', 'timestamp' => time()]);
} catch (Exception $e) {
    http_response_code(503);
    echo json_encode(['status' => 'unhealthy', 'error' => $e->getMessage()]);
    exit(1);
}
EOF

RUN chmod +x /usr/local/bin/healthcheck.php

# Create startup script
COPY <<'EOF' /usr/local/bin/docker-entrypoint.sh
#!/bin/bash
set -e

echo "Starting EspoCRM container..."

# Wait for database to be ready
echo "Checking database connectivity..."
DB_HOST=${DB_HOST:-database}
DB_PORT=${DB_PORT:-3306}
TIMEOUT=60
COUNTER=0

while ! nc -z "$DB_HOST" "$DB_PORT"; do
    COUNTER=$((COUNTER + 1))
    if [ $COUNTER -gt $TIMEOUT ]; then
        echo "‚ùå Database connection timeout after ${TIMEOUT} seconds"
        exit 1
    fi
    echo "‚è≥ Waiting for database... (${COUNTER}/${TIMEOUT})"
    sleep 1
done
echo "‚úÖ Database is ready!"

# Wait a bit more for database to be fully ready
sleep 5

# Check if this is the first run (no config exists)
if [ ! -f /var/www/html/data/config.php ]; then
    echo "üîß First run detected - EspoCRM will need initial setup"
    echo "üåê Visit your domain to complete the installation wizard"
else
    echo "‚úÖ Configuration found - running maintenance tasks"
    
    # Run EspoCRM rebuild if needed
    echo "üîÑ Running EspoCRM rebuild..."
    su -s /bin/bash -c "cd /var/www/html && php bin/command rebuild" www-data || true
    
    # Clear cache
    echo "üßπ Clearing cache..."
    su -s /bin/bash -c "cd /var/www/html && php bin/command clear-cache" www-data || true
fi

# Start cron service
echo "‚è∞ Starting cron service..."
service cron start

# Configure cron for EspoCRM (run every minute)
echo "üìÖ Setting up EspoCRM scheduled jobs..."
echo "* * * * * www-data cd /var/www/html && php bin/command run-job > /dev/null 2>&1" > /etc/cron.d/espocrm
chmod 0644 /etc/cron.d/espocrm

# Set proper ownership
chown -R www-data:www-data /var/www/html/data /var/www/html/custom /var/www/html/upload /var/www/html/client/custom 2>/dev/null || true

# Create symbolic link for client directory if using /public/
if [ -d /var/www/html/public ] && [ ! -L /var/www/html/public/client ]; then
    echo "üîó Creating symbolic link for client directory..."
    ln -s /var/www/html/client /var/www/html/public/client
fi

# Create index.php redirect if needed
if [ ! -f /var/www/html/index.php ] && [ -d /var/www/html/public ]; then
    echo "‚Ü™Ô∏è Creating redirect from root to /public/..."
    echo '<?php header("Location: /public/"); exit;' > /var/www/html/index.php
    chown www-data:www-data /var/www/html/index.php
fi

# Apply EVERTEC branding customizations
echo "üé® Applying EVERTEC branding customizations..."

# Set proper permissions for custom files
if [ -d /var/www/html/client/custom ]; then
    echo "‚úÖ Setting permissions for custom files..."
    chown -R www-data:www-data /var/www/html/client/custom
    chmod -R 755 /var/www/html/client/custom
    find /var/www/html/client/custom -type f -name "*.css" -exec chmod 644 {} \;
    find /var/www/html/client/custom -type f -name "*.js" -exec chmod 644 {} \;
fi

if [ -d /var/www/html/custom ]; then
    echo "‚úÖ Setting permissions for metadata..."
    chown -R www-data:www-data /var/www/html/custom
    chmod -R 755 /var/www/html/custom
fi

# FORCE: Replace EspoCRM references in core files (backup first)
echo "üîß Patching core files to remove EspoCRM watermark..."

# Find and replace in PHP files
find /var/www/html -type f -name "*.php" -exec grep -l "EspoCRM" {} \; 2>/dev/null | while read file; do
    if [[ ! "$file" =~ vendor|tests|data|upload ]]; then
        echo "  Patching: $file"
        sed -i.bak 's/EspoCRM/EVERTEC CRM/g' "$file"
        sed -i 's/espocrm\.com/evertec.com/g' "$file"
    fi
done

# Find and replace in JavaScript files
find /var/www/html/client -type f -name "*.js" -exec grep -l "EspoCRM" {} \; 2>/dev/null | while read file; do
    if [[ ! "$file" =~ node_modules|vendor ]]; then
        echo "  Patching: $file"
        sed -i.bak 's/EspoCRM/EVERTEC CRM/g' "$file"
        sed -i 's/espocrm\.com/evertec.com/g' "$file"
    fi
done

# Find and replace in template files
find /var/www/html -type f -name "*.tpl" -exec grep -l "EspoCRM" {} \; 2>/dev/null | while read file; do
    echo "  Patching: $file"
    sed -i.bak 's/EspoCRM/EVERTEC CRM/g' "$file"
    sed -i 's/espocrm\.com/evertec.com/g' "$file"
done

# Clear all caches to force reload
echo "üßπ Clearing all caches..."
rm -rf /var/www/html/data/cache/* 2>/dev/null || true
rm -rf /var/www/html/client/lib/templates.tpl 2>/dev/null || true
rm -rf /var/www/html/data/upload/thumbnails/* 2>/dev/null || true

# ENSURE: Recreate custom files if they don't exist after cache clear
echo "üîÑ Ensuring EVERTEC custom files exist..."
if [ ! -f /var/www/html/client/custom/res/css/custom.css ]; then
    echo "‚ùå Custom CSS missing, recreating..."
    mkdir -p /var/www/html/client/custom/res/css
    cat > /var/www/html/client/custom/res/css/custom.css << 'EOFCSS'
/* EVERTEC Branding - Auto-restored by entrypoint */
.credit.small a, p.credit.small a, .credit a, footer .credit a, #footer .credit a { display: none !important; visibility: hidden !important; opacity: 0 !important; }
.credit.small, p.credit.small, .credit, footer .credit, #footer .credit { font-size: 0 !important; color: transparent !important; }
.credit.small::after, p.credit.small::after, .credit::after, footer .credit::after, #footer .credit::after { content: "¬© 2025 EVERTEC CRM ‚Äî Todos os direitos reservados" !important; font-size: 12px !important; color: #999 !important; display: inline !important; visibility: visible !important; }
EOFCSS
fi

if [ ! -f /var/www/html/client/custom/lib/custom-footer.js ]; then
    echo "‚ùå Custom JS missing, recreating..."
    mkdir -p /var/www/html/client/custom/lib
    cat > /var/www/html/client/custom/lib/custom-footer.js << 'EOFJS'
/* EVERTEC Branding JavaScript - Auto-restored by entrypoint */
(function() {
    function replaceText() { document.querySelectorAll('*').forEach(function(el) { if (el.children.length === 0 && el.textContent.includes('EspoCRM')) { el.textContent = el.textContent.replace(/EspoCRM/g, 'EVERTEC CRM'); } }); }
    function hideWatermarks() { ['a[href*="espocrm.com"]', '.credit a'].forEach(function(sel) { document.querySelectorAll(sel).forEach(function(el) { el.style.display = 'none'; }); }); }
    function apply() { replaceText(); hideWatermarks(); }
    if (document.readyState === 'loading') { document.addEventListener('DOMContentLoaded', apply); } else { apply(); }
    setInterval(apply, 500);
    window.evertecBrandingStatus = function() { return 'ACTIVE'; };
})();
EOFJS
fi

if [ ! -f /var/www/html/custom/Espo/Custom/Resources/metadata/app/client.json ]; then
    echo "‚ùå Custom metadata missing, recreating..."
    mkdir -p /var/www/html/custom/Espo/Custom/Resources/metadata/app
    cat > /var/www/html/custom/Espo/Custom/Resources/metadata/app/client.json << 'EOFJSON'
{"cssFileList":["client/custom/res/css/custom.css"],"scriptList":["client/custom/lib/custom-footer.js"]}
EOFJSON
fi

# Set ownership again
chown -R www-data:www-data /var/www/html/client/custom /var/www/html/custom

# Create templates.tpl file if it doesn't exist
echo "üìÑ Creating templates file..."
touch /var/www/html/client/lib/templates.tpl
chown www-data:www-data /var/www/html/client/lib/templates.tpl
chmod 644 /var/www/html/client/lib/templates.tpl

# Force rebuild after customizations
if [ -f /var/www/html/data/config.php ]; then
    echo "üîÑ Force rebuilding with customizations..."
    su -s /bin/bash -c "cd /var/www/html && php bin/command rebuild" www-data || true
fi

# Additional aggressive patching for specific footer locations
echo "üéØ Targeting specific footer locations..."

# Patch the main application footer template
if [ -f /var/www/html/client/res/templates/footer.tpl ]; then
    sed -i 's/EspoCRM/EVERTEC CRM/g' /var/www/html/client/res/templates/footer.tpl
    sed -i 's/espocrm\.com/evertec.com/g' /var/www/html/client/res/templates/footer.tpl
fi

# Patch login footer
find /var/www/html -name "login.tpl" -o -name "login.php" | while read file; do
    echo "  Patching login: $file"
    sed -i 's/EspoCRM/EVERTEC CRM/g' "$file"
    sed -i 's/espocrm\.com/evertec.com/g' "$file"
done

# Patch all JSON language files
find /var/www/html -name "*.json" -path "*/i18n/*" | while read file; do
    sed -i 's/EspoCRM/EVERTEC CRM/g' "$file" 2>/dev/null || true
done

# Create override CSS that's injected everywhere
cat > /var/www/html/client/css/espo/custom-override.css << 'EOFCSS'
/* EVERTEC Override - Force remove EspoCRM */
.credit a[href*="espocrm"] { display: none !important; }
.credit::after { content: "¬© 2025 EVERTEC CRM ‚Äî Todos os direitos reservados" !important; }
body:not(.login-page) .credit { font-size: 0 !important; }
body:not(.login-page) .credit::after { font-size: 12px !important; display: block !important; }
EOFCSS

chown www-data:www-data /var/www/html/client/css/espo/custom-override.css
chmod 644 /var/www/html/client/css/espo/custom-override.css

echo "‚úÖ EVERTEC branding applied successfully!"

echo "üöÄ Starting Apache web server..."
echo "üìç EspoCRM will be available at: ${ESPOCRM_SITE_URL:-http://localhost}"
echo "üé® EVERTEC branding active - EspoCRM watermark removed"

# Start Apache
exec apache2-foreground
EOF

RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD php /usr/local/bin/healthcheck.php || exit 1

# Set entrypoint
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]